<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/memoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FF000000"
                    android:textSize="16sp"
                    android:text="\n"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#FFDDDDDD"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <Button
                    android:id="@+id/memoAddBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#FF000000"
                    android:textSize="12sp"
                    android:background="@drawable/selector_memoadd"
                    android:text="Add Memo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/countViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFDDDDDD" />

            <Button
                android:id="@+id/allViewBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/selector_allview"
                android:gravity="left|center"
                android:typeface="normal"
                android:textColor="#FF000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>